<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="Music8.Pages.CollectionPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Music8.Pages"
    xmlns:common="using:Music8.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40 0 0 0">
            <RadioButton x:ConnectionId='10' x:Name="artistsRadioButton" Content="artists" GroupName="collectionGroup" 
                                                       IsChecked="True" Style="{StaticResource TextRadioButtonStyle}"
                         FontSize="24"                                          />
            <RadioButton x:ConnectionId='11' x:Name="albumsRadioButton" Content="albums" GroupName="collectionGroup" 
                                                       Style="{StaticResource TextRadioButtonStyle}"
                         FontSize="24"                                          />
            <RadioButton x:ConnectionId='12' x:Name="songsRadioButton" Content="songs" GroupName="collectionGroup" 
                                                       Style="{StaticResource TextRadioButtonStyle}"
                         FontSize="24"                                          />
            <RadioButton x:ConnectionId='13' x:Name="playlistsRadioButton" Content="playlists" GroupName="collectionGroup" 
                                                       Style="{StaticResource TextRadioButtonStyle}"
                         FontSize="24"                                          />
            <RadioButton x:ConnectionId='14' x:Name="genresRadioButton" Content="genres" GroupName="collectionGroup" 
                                                       Style="{StaticResource TextRadioButtonStyle}"
                         FontSize="24"                                          />
        </StackPanel>

        <GridView x:ConnectionId='1' x:Name="artistsGridView" Visibility="Visible"
                  Grid.Row="1"
                  Padding="40,10,116,0"
                  SelectionMode="None"
                  IsSwipeEnabled="false"
                  IsItemClickEnabled="True"
                                                       
                  VerticalAlignment="Stretch">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="245" Height="280">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="208"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="45"/>
                        </Grid.ColumnDefinitions>
                        <Border>
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/albumStackShadowed.png"/>
                            </Border.Background>
                            <Image Source="{Binding ArtURL}" Stretch="UniformToFill"
                                   AutomationProperties.Name="{Binding Title}" Width="175" Height="175"
                                   Margin="0,12,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel Grid.Column="1" Grid.RowSpan="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button x:ConnectionId='8' Content="&#xE102;" Style="{StaticResource CustomButtonStyle}"                    />
                            <Button x:ConnectionId='9' Content="&#xE109;" Style="{StaticResource CustomButtonStyle}"                   />
                            <Button Content="&#xE0FA;" Style="{StaticResource CustomButtonStyle}"/>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                                <TextBlock Text="{Binding AlbumArtist}"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource ListViewItemOverlayBackgroundThemeBrush}"
                                           Style="{StaticResource SubtitleTextStyle}"
                                           Margin="8,0,0,0" MaxHeight="40"
                                           FontSize="18" TextAlignment="Center"/>
                                <TextBlock Text="{Binding AlbumArtist}"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource ListViewItemOverlayBackgroundThemeBrush}"
                                           Style="{StaticResource BodyTextStyle}"
                                           FontSize="14" TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VariableSizedWrapGrid/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemContainerTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition/>
                </TransitionCollection>
            </GridView.ItemContainerTransitions>
        </GridView>

        <GridView x:ConnectionId='2' x:Name="albumsGridView" Visibility="Collapsed"
                  Grid.Row="1"
                  Padding="40,10,116,0"
                  SelectionMode="None"
                  IsSwipeEnabled="false"
                  IsItemClickEnabled="True"
                                                       
                  VerticalAlignment="Stretch">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="245" Height="280">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="208"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="45"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/Assets/shadow.png"/>
                        <Path Stroke="#B2B2B2" StrokeThickness="1">
                            <Path.Data>
                                <GeometryGroup FillRule="EvenOdd">
                                    <EllipseGeometry RadiusX="90" RadiusY="90" Center="100,100" />
                                    <EllipseGeometry RadiusX="10" RadiusY="10" Center="100,100" />
                                </GeometryGroup>
                            </Path.Data>
                            <Path.Fill>
                                <ImageBrush ImageSource="{Binding ArtURL}" Stretch="UniformToFill"/>
                            </Path.Fill>
                        </Path>
                        <Path Fill="White" Opacity=".5" StrokeThickness="1">
                            <Path.Data>
                                <GeometryGroup FillRule="EvenOdd">
                                    <EllipseGeometry RadiusX="20" RadiusY="20" Center="100,100" />
                                    <EllipseGeometry RadiusX="10" RadiusY="10" Center="100,100" />
                                </GeometryGroup>
                            </Path.Data>
                        </Path>
                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                                <TextBlock Text="{Binding Album}"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource ListViewItemOverlayBackgroundThemeBrush}"
                                           Style="{StaticResource SubtitleTextStyle}"
                                           Margin="8,0,0,0" MaxHeight="40"
                                           FontSize="18" TextAlignment="Center"/>
                                <TextBlock Text="{Binding AlbumArtist}"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource ListViewItemOverlayBackgroundThemeBrush}"
                                           Style="{StaticResource BodyTextStyle}"
                                           FontSize="14" TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Grid.Column="1" Grid.RowSpan="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button x:ConnectionId='6' Content="&#xE102;" Style="{StaticResource CustomButtonStyle}"                   />
                            <Button x:ConnectionId='7' Content="&#xE109;" Style="{StaticResource CustomButtonStyle}"                  />
                            <Button Content="&#xE0FA;" Style="{StaticResource CustomButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VariableSizedWrapGrid/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemContainerTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition/>
                </TransitionCollection>
            </GridView.ItemContainerTransitions>
        </GridView>

        <GridView x:ConnectionId='3' x:Name="songsGridView" Visibility="Collapsed"
                  Grid.Row="1"
                  Padding="40,10,116,46"
                  SelectionMode="None"
                  IsSwipeEnabled="false"
                  IsItemClickEnabled="True"
                                                       
                  VerticalAlignment="Stretch">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="110" Width="350" Margin="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="135"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="/Assets/shadow.png"/>
                        <Path Stroke="#B2B2B2" StrokeThickness="1">
                            <Path.Data>
                                <GeometryGroup FillRule="EvenOdd">
                                    <EllipseGeometry RadiusX="45" RadiusY="45" Center="50,50" />
                                    <EllipseGeometry RadiusX="5" RadiusY="5" Center="50,50" />
                                </GeometryGroup>
                            </Path.Data>
                            <Path.Fill>
                                <ImageBrush ImageSource="{Binding ArtURL}" Stretch="UniformToFill"/>
                            </Path.Fill>
                        </Path>
                        <Path Fill="White" Opacity=".5" StrokeThickness="1">
                            <Path.Data>
                                <GeometryGroup FillRule="EvenOdd">
                                    <EllipseGeometry RadiusX="10" RadiusY="10" Center="50,50" />
                                    <EllipseGeometry RadiusX="5" RadiusY="5" Center="50,50" />
                                </GeometryGroup>
                            </Path.Data>
                        </Path>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock Text="{Binding Title}" Style="{StaticResource SubtitleTextStyle}" TextWrapping="NoWrap"/>
                            <TextBlock Text="{Binding AlbumArtist}" Style="{StaticResource SubtitleTextStyle}" FontSize="12" TextWrapping="NoWrap"/>
                            <TextBlock Style="{StaticResource CaptionTextStyle}" TextWrapping="NoWrap">
                                <Run Text="{Binding Duration}"/>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="10,0,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:ConnectionId='4' Content="&#xE102;" Style="{StaticResource CustomButtonStyle}"                  />
                            <Button x:ConnectionId='5' Content="&#xE109;" Style="{StaticResource CustomButtonStyle}"                 />
                            <Button Content="&#xE0FA;" Style="{StaticResource CustomButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VariableSizedWrapGrid/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemContainerTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition/>
                </TransitionCollection>
            </GridView.ItemContainerTransitions>
        </GridView>

